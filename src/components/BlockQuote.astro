---
type Props = {
  url?: string;
  cite?: string;
};

const { url, cite } = Astro.props;

---
<blockquote cite={url}>
  <p>
    <slot />
  </p>
  {cite && <cite>{cite}</cite>}
</blockquote>

<style>
  blockquote {
    position: relative;
    text-align: center;
  }

  blockquote::before {
    content: "\201C";
    position: absolute;
    color: rgba(var(--rgb-accent), 0.2);
    top: -70px;
    left: 40%;
    font-size: 12rem;
    font-family: "Georgia", sans-serif;
  }

  p {
    margin: 0;
    font-family: "Raleway", sans-serif;
    font-size: var(--font-base);
  }
</style>
