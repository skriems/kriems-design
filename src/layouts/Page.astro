---
import { ViewTransitions } from "astro:transitions";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={"favicon.svg"} />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <slot />
    <script>
      import "../scripts/menu.js";
    </script>
  </body><Footer />
</html>

<style is:global>
  :root {
    --rgb-primary: 255, 255, 255;
    --rgb-accent: 255, 145, 136;
    --rgb-background: 122, 113, 108;

    --color-primary: rgb(var(--rgb-primary));
    --color-accent: rgb(var(--rgb-accent));
    --color-background: rgb(var(--rgb-background));

    --font-sm: clamp(0.8rem, 0.17vi + 0.76rem, 0.89rem);
    --font-base: clamp(1rem, 0.34vi + 0.91rem, 1.19rem);
    --font-md: clamp(1.25rem, 0.61vi + 1.1rem, 1.58rem);
    --font-lg: clamp(1.56rem, 1vi + 1.31rem, 2.11rem);
    --font-xl: clamp(1.95rem, 1.56vi + 1.56rem, 2.81rem);
    --font-xxl: clamp(2.44rem, 2.38vi + 1.85rem, 3.75rem);
    --font-xxxl: clamp(3.05rem, 3.54vi + 2.17rem, 5rem);
  }

  * {
    box-sizing: border-box;
  }

  @font-face {
    font-family: "Manrope";
    src:
      local("Manrope"),
      url("/fonts/Manrope-Medium.ttf") format("truetype");
  }

  @font-face {
    font-family: "BebasNeue";
    src:
      local("Bebas Neue"),
      url("/fonts/BebasNeue-Regular.ttf") format("truetype");
  }

  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
  }

  body {
    color: var(--color-primary);
    margin: 0;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  h1 {
    font-family: Manrope, system-ui, sans-serif;
    font-size: var(--font-xxl);
  }

  h2 {
    font-family: BebasNeue, system-ui, sans-serif;
    font-size: var(--font-xl);
  }

  p {
    font-family: Manrope, system-ui, sans-serif;
    font-size: var(--font-base);
  }

  button {
    border: none;
    padding: 1rem;
    font-family: BebasNeue, system-ui, sant-serif;
    font-size: 1.2rem;
    text-transform: uppercase;
    cursor: pointer;
    color: var(--color-primary);
    background: rgba(var(--rgb-accent), 0.8);
    transition: background 0.3s ease;
  }

  button:hover {
    background: rgba(var(--rgb-accent), 1);
  }

  *:focus-visible {
    outline-style: solid;
  }

  section {
    background: var(--color-background);
    padding: 10vw 10vw 1px 10vw;
  }

  section h2 {
    color: var(--color-accent);
    letter-spacing: 0.8rem;
  }
</style>
